{
  "name": "portal-api",
  "version": "1.0.0",
  "description": "",
  "compilerOptions": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build:frontend": "cd ../frontend && npm install && npm run build:prod && rm -rf ../server/dist && cp -R dist/portal ../server/dist",
    "dev": "nodemon -x ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "fix-lint": "eslint . --ext .ts --fix",
    "build": "npm run lint && tsc -p tsconfig.build.json",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.7",
    "@types/form-data": "^2.5.0",
    "@types/is-blank": "^2.1.0",
    "@types/node": "^14.11.5",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.20.0",
    "nodemon": "^2.0.4",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/cors": "^2.8.7",
    "@types/express-fileupload": "^1.1.5",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/pg": "^7.14.5",
    "@types/temp-dir": "^2.0.2",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "faker": "^5.1.0",
    "form-data": "^3.0.0",
    "is-blank": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.5",
    "sequelize-typescript": "^2.0.0-beta.1",
    "temp-dir": "^2.0.0",
    "uuid": "^8.3.1"
  },
  "author": "Tomas Kostadinov",
  "license": "ISC"
}
